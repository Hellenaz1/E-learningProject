<Window x:Class="PRN212_Project.SignUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRN212_Project"
        mc:Ignorable="d"
        Title="SignUpWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Image Grid.Column="0" Source="/Image/signup.jpg" Stretch="Fill" />

        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>

            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30">
                <TextBlock.Text>Đăng Nhập</TextBlock.Text>
            </TextBlock>

            <StackPanel Grid.Row="1">
                <TextBlock TextWrapping="Wrap" Text="Têm đăng nhập" Margin=" 8 0 0 10"/>
                <TextBox x:Name="tbUserName" TextWrapping="Wrap" Width="366"/>
            </StackPanel>

            <StackPanel Grid.Row="2">
                <TextBlock TextWrapping="Wrap" Text="Email" Margin=" 8 0 0 10"/>
                <TextBox x:Name="tbEmail" TextWrapping="Wrap" Width="366"/>
            </StackPanel>

            <StackPanel Grid.Row="3">
                <TextBlock TextWrapping="Wrap" Text="Mật Khẩu" Margin=" 8 0 0 10"/>
                <PasswordBox  x:Name="pwPassword" Width="366"/>
            </StackPanel>

            <StackPanel Grid.Row="4">
                <TextBlock TextWrapping="Wrap" Text="Nhập lại mật Khẩu" Margin=" 8 0 0 10"/>
                <PasswordBox x:Name="pwRePassword"  Width="366"/>
            </StackPanel>

            <StackPanel Grid.Row="5">
                <TextBlock TextWrapping="Wrap" Text="Giới Tính" Margin=" 8 0 0 10"/>
                <Grid Margin=" 10 0 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <RadioButton x:Name="rbMale" Grid.Column="0" Content="Nam"/>
                    <RadioButton x:Name="rbFemale" Grid.Column="1" Content="Nữ"/>
                </Grid>
            </StackPanel>

            <Border Grid.Row="6" CornerRadius="20" BorderBrush="Black" BorderThickness="1" Width="150"  Height="40" Margin="0 10 0 0">
                <Button 
                Content="Đăng Ký" Width="150"
                FontSize="15"
                Foreground="Black" 
                Background="Transparent" BorderThickness="0" Click="Button_Click"  />
            </Border>
        </Grid>
    </Grid>
</Window>
