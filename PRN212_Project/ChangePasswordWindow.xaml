<Window x:Class="PRN212_Project.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRN212_Project"
        mc:Ignorable="d"
        Title="ChangePasswordWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Image Source="/Image/changepass.jpg" Grid.RowSpan="2" Grid.Row="0"/>
            <Button Content="Quay lại" Height="30" Grid.Row="0" Width="50" Click="ButtonReturn_Click" 
                    VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,0,0"  />
        </Grid>

        <Grid Grid.Column="1" Margin="28">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="16"/>

                <RowDefinition Height="Auto"/>
                <RowDefinition Height="8"/>

                <RowDefinition Height="Auto"/>
                <RowDefinition Height="8"/>

                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>

                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Đổi mật khẩu" FontSize="20" FontWeight="Bold"/>

            <StackPanel Grid.Row="2">
                <TextBlock Text="Mật khẩu hiện tại" Margin="0,0,0,6"/>
                <PasswordBox x:Name="pbPasswordOld" Height="32"/>
            </StackPanel>

            <StackPanel Grid.Row="4">
                <TextBlock Text="Mật khẩu mới" Margin="0,0,0,6"/>
                <PasswordBox x:Name="pbNewPassword" Height="32"/>
            </StackPanel>

            <StackPanel Grid.Row="6">
                <TextBlock Text="Xác nhận mật khẩu mới" Margin="0,0,0,6"/>
                <PasswordBox x:Name="pbConfirmPassword" Height="32"/>
            </StackPanel>

            <Button Grid.Row="8" Content="Đổi mật khẩu" Height="36" Click="ButtonChangePassword_Click"/>
        </Grid>
    </Grid>
</Window>
