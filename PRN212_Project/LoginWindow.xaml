<Window x:Class="PRN212_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRN212_Project"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="3*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Image Source="/Image/background_dangky.jpg" Stretch="Fill" />

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0 0 0 100">
                <TextBlock FontSize="36" Foreground="Black" FontWeight="Bold" Text="Đăng Ký" HorizontalAlignment="Center"/>
                <TextBlock Foreground="Black" TextWrapping="Wrap" 
                           Text="Cập nhật thông tin và tạo tài khoản mới để kết nối và khám phá những khóa học với chúng tôi"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           Margin="0 30 0 0"
                           FontWeight="DemiBold"
                           />
                <Border CornerRadius="20"  BorderBrush="Black" BorderThickness="1" Width="127" Height="40" Margin="0 30 0 0">
                    <Button 
                         Content="Đăng Ký Ngay" Width="120"
                         Foreground="Black" Padding="0 10"
                         Background="Transparent" BorderThickness="0" Click="Button_Click"                       
                         />
                </Border>

            </StackPanel>
        </Grid>

        <Grid Grid.Column="1" HorizontalAlignment="Center" Margin="0 80 0 0">
            <Grid Width="320">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="9*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="40"/>

                    <RowDefinition Height="40"/>

                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                    FontSize="36" Foreground="Black" FontWeight="Bold" Text="Đăng Nhập" HorizontalAlignment="Center"
                           Margin="0 0 0 20"/>

                <Image Grid.Column="0" Grid.Row="1" Source="/Image/user.png" Width="20" Height="20"/>
                <TextBox Grid.Column="1" Grid.Row="1" Margin="0,5,0,5"></TextBox>

                <Image Grid.Column="0" Grid.Row="2" Source="/Image/padlock.png" Width="20" Height="20"/>
                <TextBox Grid.Column="1" Grid.Row="2" Margin="0,5,0,5"></TextBox>

                <Border Grid.Row="3" Grid.ColumnSpan="2" CornerRadius="20" BorderBrush="Black" BorderThickness="1" Width="200"  Height="50" Margin="0 10 0 0">
                    <Button 
                         Content="Đăng Nhập" Width="120"
                        FontSize="15"
                         Foreground="Black" Padding=" 10"
                         Background="Transparent" BorderThickness="0" Margin="39,0,39,-1" />
                </Border>
            </Grid>


        </Grid>

    </Grid>
</Window>
