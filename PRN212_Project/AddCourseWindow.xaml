<Window x:Class="PRN212_Project.AddCourseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRN212_Project"
        mc:Ignorable="d"
        Title="Tạo khóa học mới"
        Height="650" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F9FAFB">
    <Border Background="White" CornerRadius="8" Padding="30" Margin="20" BorderBrush="#E5E7EB" BorderThickness="1">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical">
                <!-- 🔹 Tiêu đề -->
                <TextBlock x:Name="txtHeader"
                           Text="Tạo khóa học mới"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#111827"
                           Margin="0,0,0,20"/>

                <!-- 🔹 Tên khóa học -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Tên khóa học *" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtTitle" Margin="0,5,0,0" Padding="6"/>
                </StackPanel>

                <!-- 🔹 Ngôn ngữ -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Ngôn ngữ *" FontWeight="SemiBold"/>
                    <ComboBox x:Name="cbLanguage" Margin="0,5,0,0" Padding="6">
                        <ComboBoxItem Content="English"/>
                        <ComboBoxItem Content="Vietnamese"/>
                        <ComboBoxItem Content="Japanese"/>
                        <ComboBoxItem Content="Korean"/>
                    </ComboBox>
                </StackPanel>

                <!-- 🔹 Cấp độ -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Cấp độ *" FontWeight="SemiBold"/>
                    <ComboBox x:Name="cbLevel" Margin="0,5,0,0" Padding="6">
                        <ComboBoxItem Content="Beginner"/>
                        <ComboBoxItem Content="Intermediate"/>
                        <ComboBoxItem Content="Advanced"/>
                    </ComboBox>
                </StackPanel>

                <!-- 🔹 Danh mục -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Danh mục *" FontWeight="SemiBold"/>
                    <ComboBox x:Name="cbCategory" Margin="0,5,0,0" Padding="6"/>
                </StackPanel>

                <!-- 🔹 Mô tả -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Mô tả khóa học" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtDescription" Margin="0,5,0,0" Padding="6" AcceptsReturn="True" Height="100"/>
                </StackPanel>

                <!-- 🔹 Nút hành động -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button Content="Hủy" Width="80" Margin="0,0,10,0" Click="Cancel_Click"/>
                    <Button x:Name="btnSave"
                            Content="Tạo khóa học"
                            Width="120"
                            Background="#2563EB"
                            Foreground="White"
                            Click="CreateCourse_Click"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Border>
</Window>
