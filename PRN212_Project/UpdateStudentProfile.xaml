<Window x:Class="PRN212_Project.UpdateStudentProfile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRN212_Project"
        mc:Ignorable="d"
        Title="UpdateStudentProfile" Height="500" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Image Source="/Image/profile.jpg" Grid.Column="0" Stretch="Fill"/>

        <Grid Margin="15 0 15 0" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="14"/>
                
                <RowDefinition Height="*"/>
                <RowDefinition Height="16"/>
                
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Thông tin cá nhân" FontSize="20" FontWeight="Bold" Margin="0 10 0 0"/>

            <Grid Grid.Row="2" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Username" VerticalAlignment="Center"/>
                <TextBox   Grid.Row="0" Grid.Column="1" x:Name="tbUsername" IsReadOnly="True" Margin="0,6,0,6"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Email" VerticalAlignment="Center"/>
                <TextBox   Grid.Row="1" Grid.Column="1" x:Name="tbEmail" IsReadOnly="True" Margin="0,6,0,6"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Role" VerticalAlignment="Center"/>
                <TextBox   Grid.Row="2" Grid.Column="1" x:Name="tbRole" IsReadOnly="True" Margin="0,6,0,6"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Họ và tên" VerticalAlignment="Center"/>
                <TextBox   Grid.Row="3" Grid.Column="1" x:Name="tbFullName" Margin="0,6,0,6"/>

                <TextBlock Grid.Row="4" Grid.Column="0" Text="Số điện thoại" VerticalAlignment="Center"/>
                <TextBox   Grid.Row="4" Grid.Column="1" x:Name="tbPhone" Margin="0,6,0,6"/>

                <TextBlock Grid.Row="5" Grid.Column="0" Text="Ngày sinh" VerticalAlignment="Center"/>
                <DatePicker Grid.Row="5" Grid.Column="1" x:Name="dpDob" Margin="0,6,0,6"/>

                <TextBlock Grid.Row="6" Grid.Column="0" Text="Giới tính" VerticalAlignment="Center"/>
                <ComboBox  Grid.Row="6" x:Name="cbGender" Margin="0,6,0,6" Grid.Column="1">
                    <ComboBoxItem x:Name="cbMale" Content="Nam"/>
                    <ComboBoxItem x:Name="cbFemale" Content="Nữ"/>
                </ComboBox>

                <TextBlock Grid.Row="7" Grid.Column="0" Text="Trường" VerticalAlignment="Center"/>
                <TextBox   Grid.Row="7" Grid.Column="1" x:Name="tbInstitution" Margin="0,6,0,6"/>

                <TextBlock Grid.Row="8" Grid.Column="0" Text="Lớp/Trình độ" VerticalAlignment="Center"/>
                <TextBox   Grid.Row="8" Grid.Column="1" x:Name="tbGradeLevel" Margin="0,6,0,6"/>

                <TextBlock Grid.Row="9" Grid.Column="0" Text="Địa chỉ" VerticalAlignment="Center"/>
                <TextBox   Grid.Row="9" Grid.Column="1" x:Name="tbAddress" Margin="0,6,0,6"/>

                <Grid Grid.Row="10" Grid.Column="1" Margin="0 15 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="10"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Button Content="Đóng" Grid.Column="0" Height="30" Click="ButtonReturn_Click"/>
                    <Button Content="Lưu thông tin" Grid.Column="2" Height="30" Click="ButtonUpdate_Click"/>
                </Grid>
            </Grid>
            
        </Grid>
    </Grid>
</Window>
