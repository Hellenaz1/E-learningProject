<Window x:Class="PRN212_Project.EditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRN212_Project"
        mc:Ignorable="d"
       Title="Chỉnh sửa người dùng"
        Height="520" Width="680"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F9FAFB">
    <Border CornerRadius="8" Background="#FFFFFF" Padding="30" Margin="20" BorderBrush="#E5E7EB" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 🔹 Tiêu đề -->
            <TextBlock Text="Chỉnh sửa người dùng"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#1F2937"
                       Margin="0,0,0,20"/>

            <!-- 🔹 Form chính -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Tên đăng nhập -->
                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,15,10">
                    <TextBlock Text="Tên đăng nhập" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtUsername" IsReadOnly="True" Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Họ tên -->
                <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,10">
                    <TextBlock Text="Họ tên" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtFullName" IsReadOnly="True" Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Email -->
                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,15,10">
                    <TextBlock Text="Email" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtEmail" IsReadOnly="True" Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Số điện thoại -->
                <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,0,10">
                    <TextBlock Text="Số điện thoại" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtPhone" IsReadOnly="True" Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Vai trò -->
                <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,10,15,10">
                    <TextBlock Text="Vai trò" FontWeight="SemiBold"/>
                    <ComboBox x:Name="cbRole" Width="200" Margin="0,5,0,0">
                        <ComboBoxItem Content="admin"/>
                        <ComboBoxItem Content="student"/>
                    </ComboBox>
                </StackPanel>

                <!-- Ngày sinh -->
                <StackPanel Grid.Row="2" Grid.Column="1" Margin="0,10,0,10">
                    <TextBlock Text="Ngày sinh" FontWeight="SemiBold"/>
                    <DatePicker x:Name="dpBirthDate" IsEnabled="False" Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>

            <!-- 🔹 Nút hành động -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Đóng" Width="90" Margin="0,0,10,0"  Click="Close_Click" />
                <Button Content="Lưu" Width="90" Background="#2563EB" Foreground="White" Click="Save_Click" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
